--player

function init_player()
	p={
	 x=64,y=64,
	 dx=0,dy=0,
	 
	 bx=1,by=1,
	 bw=6,bh=6,
	 
	 spd=.4,
	 fric=.75,
	 
	 spr=64,
	}
	blockselected=block_list[1]
	nb_blockselected=0
end

function update_player()
	spd=p.spd
	if (abtn(⬅️)) p.dx-=spd
	if (abtn(➡️)) p.dx+=spd
	if (abtn(⬆️)) p.dy-=spd
	if (abtn(⬇️)) p.dy+=spd
	
	p.dx *= p.fric
	p.dy *= p.fric
	
	collide(p)
	
	p.x += p.dx
	p.y += p.dy
end


