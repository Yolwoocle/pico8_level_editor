--objects (+ collsion)
function make_ball(x,y)
	return {
		x=x, y=y,
		dx=0,dy=0,
		
		bx=1,by=1,
		bw=6,bh=6,
		
		spr=2,
		kickable = true,
	}
end

function update_objs()
	for o in all(objects)do
		o.x += o.dx
		o.y += o.dy
		local x=o.x
		local y=o.y
		
		o.debug=obj_coll(o,p)
		if o.kickable and obj_coll(o,p) then
			--determine kick axis
			local axis=split"3,0"
			if(abs(p.dy)>abs(p.dx))axis=split"0,3"
			
			o.kickable = false
			o.kicked = true
			o.dx = sgn(p.dx)*axis[1]
			o.dy = sgn(p.dy)*axis[2]
			
			debug=tostr(o.dx).." "..tostr(o.dy)
			
		end
		if o.kicked then
			if collide(o,1) then
				kick_block(o,x,y)
			end
			
		end
	end
end

function draw_objs()
	for o in all(objects)do
		spr(o.spr,o.x,o.y)
	end
end


-- collisions
 
function is_solid(x,y)
	return fget(mget(x\8,y\8),0)
end

function collision(x,y,w,h)
	return 
	   is_solid(x,  y)
	or is_solid(x+w,y)
	or is_solid(x,  y+h)
	or is_solid(x+w,y+h) 
end

function collide(o,bounce)
	local x,y = o.x,o.y
	local dx,dy = o.dx,o.dy
	local w,h = o.bw-1,o.bh-1
	local ox,oy = x+o.bx,y+o.by
	bounce = bounce or 0.1 
	
	--collisions
	local coll_x = collision( 
	ox+dx, oy,    w, h)
	local coll_y = collision(
	ox,    oy+dy, w, h)
	local coll_xy = collision(
	ox+dx, oy+dy, w, h)
	
	if coll_xy then
		--prevent stuck in corners 
		o.dx *= -bounce
		o.dy *= -bounce
		return true
		
	elseif coll_x then
		o.dx *= -bounce
		return true
		
	elseif coll_y then
		o.dy *= -bounce
		return true
	end
	
	return false
end

function rect_overlap(ax,ay,
aw,ah,bx,by,bw,bh)
	return not (ax > bx+bw
	         or ay > by+bh
	         or ax+aw < bx
	         or ay+ah < by)
end

function obj_coll(a,b)
	local ax = a.x+a.bx
	local ay = a.y+a.by
	
	local bx = b.x+b.bx
	local by = b.y+b.by
	
	return rect_overlap(
	ax, ay, a.bw, a.bh,
	bx, by, b.bw, b.bh
	)
end
